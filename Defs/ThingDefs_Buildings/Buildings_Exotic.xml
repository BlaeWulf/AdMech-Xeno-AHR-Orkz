      <texPath>Things/Building/Exotic/CrashedPoisonShipPart</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(6,6)</drawSize>
			<shadowData>
				<volume>(5.5, 1.0, 2.45)</volume>
