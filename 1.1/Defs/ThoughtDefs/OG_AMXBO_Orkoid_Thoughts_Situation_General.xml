  <ThoughtDef>
    <defName>ApparelDamaged_OGOrkoid</defName>
    <workerClass>ThoughtWorker_ApparelDamaged</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>ratty apparel</label>
        <description>Dez holes in ma stuff are gettin big. I gotta loot somfink new to wear..</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
      <li>
        <label>tattered apparel</label>
        <description>Dis ting looks like iz bout to fall apart. iz not even good fer scrapz!</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>DeadMansApparel_OGOrkoid</defName>
    <workerClass>ThoughtWorker_DeadMansApparel</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>tainted {0}</label>
        <description>I am wearing a piece of apparel that someone died in. I done looted it.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
			<li>
				<label>tainted {0} (+1)</label>
				<description>I am wearing two pieces of apparel that someone died in. More loot fer me!.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
			<li>
				<label>tainted {0} (+2)</label>
				<description>I am wearing three pieces of apparel that someone died in. I iz startin to look like a proper Flash git!</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
			<li>
				<label>tainted {0} etc</label>
				<description>I am wearing four or more pieces of apparel that someone died in. Diz is da Best!</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
    </stages>
		<!--
		<nullifyingTraits>
			<li>Bloodlust</li>
		</nullifyingTraits>
		-->
  </ThoughtDef>

	
  <ThoughtDef>
    <defName>HumanLeatherApparelHappy_OGOrkoid</defName>
    <workerClass>ThoughtWorker_HumanLeatherApparel</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>humanoid leather {0}</label>
        <description>I enjoy wearing the suffering of others.</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
			<li>
				<label>humanoid leather {0} (+1)</label>
				<description>This will scare them. All will know my power.</description>
				<baseMoodEffect>4</baseMoodEffect>
			</li>
			<li>
				<label>humanoid leather {0} (+2)</label>
				<description>The faces on my clothes aren't smiling, but they make *me* happy.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
			<li>
				<label>humanoid leather {0} etc</label>
				<description>The flesh! The flesh signals my triumph!</description>
				<baseMoodEffect>8</baseMoodEffect>
			</li>
    </stages>
		<requiredTraits>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</requiredTraits>
  </ThoughtDef>
